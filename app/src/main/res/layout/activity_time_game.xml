<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slobx.www.flagmaster.normalgame.NormalGameNameFlagActivity"
    android:background="#FFFFFF"

    >


    <ImageView
        style="@style/BackGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewTimeGame"
            android:clickable="true"
            android:onClick="buttonOnClickTimeGame"
            android:layout_marginRight="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewBackground1"
            android:clickable="false"
            android:visibility="invisible"
            android:src="@drawable/redx"
            android:layout_marginRight="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewRedX"
            android:clickable="false"
            android:visibility="invisible"
            android:layout_marginRight="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewTimeGame2"
            android:clickable="true"
            android:onClick="buttonOnClickTimeGame"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewBackground2"
            android:clickable="false"
            android:visibility="invisible"
            android:src="@drawable/redx"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewRedX2"
            android:clickable="false"
            android:visibility="invisible"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="135dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewTimeGame3"
            android:clickable="true"
            android:onClick="buttonOnClickTimeGame"
            android:layout_marginRight="107dp"
            android:layout_marginTop="242dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewBackground3"
            android:clickable="false"
            android:visibility="invisible"
            android:src="@drawable/redx"
            android:layout_marginRight="107dp"
            android:layout_marginTop="242dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewRedX3"
            android:clickable="false"
            android:visibility="invisible"
            android:layout_marginRight="107dp"
            android:layout_marginTop="242dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewTimeGame4"
            android:clickable="true"
            android:onClick="buttonOnClickTimeGame"
            android:layout_marginTop="242dp"
            android:layout_marginLeft="107dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewBackground4"
            android:clickable="false"
            android:visibility="invisible"
            android:src="@drawable/redx"
            android:layout_marginTop="242dp"
            android:layout_marginLeft="107dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonImageViewRedX4"
            android:clickable="false"
            android:visibility="invisible"
            android:layout_marginTop="242dp"
            android:layout_marginLeft="107dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/countryTextViewTimeGame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/countrytextviewbackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/timeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/scoreTextVievTimeGame"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:textColor="#000000"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewTimeGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
