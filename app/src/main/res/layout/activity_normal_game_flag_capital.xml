<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.slobx.www.flagmaster.normalgame.NormalGameNameFlagActivity"


    >


    <ImageView
        style="@style/BackGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFlagName1"
            android:textColor="#000000"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/countrybuttonbackground"
            android:onClick="buttonOnClickArcadeGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFlagName2"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:background="@drawable/countrybuttonbackground"
            android:onClick="buttonOnClickArcadeGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFlagName3"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:background="@drawable/countrybuttonbackground"
            android:onClick="buttonOnClickArcadeGame"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFlagName4"
            android:textColor="#000000"
            android:background="@drawable/countrybuttonbackground"
            android:onClick="buttonOnClickArcadeGame"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/countryFlagImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large text"
        android:gravity="center|left"
        android:paddingBottom="29dp"
        android:paddingLeft="20dp"
        android:id="@+id/leftTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:textColor="#000000"
        android:background="@drawable/scoretextbackground1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:gravity="center"
        android:id="@+id/scoreTextViev"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:textColor="#000000"
        android:background="@drawable/scoretextbackground2"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewArcadeGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
